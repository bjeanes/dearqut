%h2
  Welcome Back
#loginbox.user-box
  - form_tag session_path, :id => 'login_form' do
    .error
      = flash[:error]
    %a{ :href => "/login/twitter" }
      = image_tag "twitter_login.png"
    %br
    %br
    %em
      or use the form below
    %br
    %br
    %label{ :for => "login" }
      Username
    %br
    = text_field_tag 'login', nil, :class => 'text_field'
    %br
    %label{ :for => "password" }
      Password
    %br
    = password_field_tag 'password', nil, :class => 'password_field'
    %br
    = select_tag 'remember_me', options_for_select([['keep', true], ['don\'t keep', false]])
    %label{ :for => "remember_me" } me logged in.
    %br
    %br
    .field.submit
      = submit_tag 'Log In', :class => 'button'
