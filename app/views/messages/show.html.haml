#random-message.center= render :partial => 'message', :locals => {:message => @message}
#create-comment
  = image_tag 'comment.png'
  - form_for [@message, @message.comments.build] do |f|
    = f.text_area :body
    = f.submit 'Post Comment', :class => 'button right'
    - if logged_in?
      #anon
        = f.label :private, "Post Anonymously"
        = f.check_box :private
#comments
  - @comments.each do |comment|
    - unless comment.new_record?
      %div{:id=>"comment-#{comment.id}", :class => "comment #{cycle("even", "odd")}#{' anonymous' if comment.anonymous?}"}
        %p.postedby
          Posted by:
          %strong= comment.author
          on
          = h comment.created_at.to_s(:short)
        .message= simple_format h(comment.body)